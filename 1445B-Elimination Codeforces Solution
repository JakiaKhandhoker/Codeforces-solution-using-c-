#include<bits/stdc++.h>
using namespace std;
#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define endl '\n'
int main(){
optimize();
int n;
cin>>n;
for(int i=0;i<n;i++){
    int a,b,c,d;
    int sum=0,s2=0;
    cin>>a>>b>>c>>d;
     sum=a+b;
     s2=c+d;
     
    if(sum>s2){
        cout<<sum<<endl;
    }
    else if(sum==s2){
        cout<<sum<<endl;
    }
    else{
        cout<<s2<<endl;
    }
}
return 0;
}
